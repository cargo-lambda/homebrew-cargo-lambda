class CargoLambda < Formula
  desc "cargo-lambda is a Cargo subcommand to help you work with AWS Lambda."
  homepage "https://github.com/cargo-lambda/cargo-lambda"

  if OS.mac?
    url "<%= @mac_url %>"
    sha256 "<%= @mac_sha %>"
  else
    url "<%= @linux_url %>"
    sha256 "<%= @linux_sha %>"
  end
  license "MIT"

  depends_on "zig"

  def install
    bin.install "cargo-lambda"
  end
end
